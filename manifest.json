{
    "manifest_version": 2,
    "name": "Dread-Search",
    "version": "0.3",

    "description": "Adds the Dread-Search Engine",

    "icons": {
        "48": "icons/favicon.svg",
        "96": "icons/favicon.svg"
    },

    "chrome_settings_overrides": {
		"search_provider": {
			"name": "Dread-Search",
			"search_url": "https://search.dread-net.com/search?q={searchTerms}",
			"suggest_url": "https://search.dread-net.com/autocompleter?q={searchTerms}",
			"favicon_url": "icons/favicon.svg",
			"keyword": "@dread @dread-search",
			"is_default": true
		}
	}
}
