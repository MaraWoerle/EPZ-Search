{
    "manifest_version": 2,
    "name": "EPZ-Search",
    "version": "0.1",

    "description": "Adds the EPZ-Search Engine",

    "icons": {
        "48": "icons/epz.svg",
        "96": "icons/epz.svg"
    },

    "chrome_settings_overrides": {
		"search_provider": {
			"name": "EPZ-Search",
			"search_url": "https://search.epische-zentrale.de/search?q={searchTerms}",
			"suggest_url": "https://search.epische-zentrale.de/autocompleter?q={searchTerms}",
			"favicon_url": "icons/epz.svg",
			"keyword": "@epz @epz-search",
			"is_default": true
		}
	}
}
